#include <iostream>

using namespace std;

 

int main() {

    //Write your code here

    int n;

    cin>>n;

    int sum=0;

    for(int i=2;i<=n;i=i+2)

    {

        // if(n%2==0)

        // {

        //     sum=sum+i;

        // }

        sum=sum+i;

    }

    cout<<sum;

    return 0;

}
