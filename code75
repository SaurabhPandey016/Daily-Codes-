#include <bits/stdc++.h>
using namespace std;

int main() {
	long long int t;
	cin>>t;
	while(t--){
	    long long int i,j;
	    cin>>i>>j;
	    long long int count=0;
	    while(i!=j){
	        if(i>j)
	        i=i/2;
	        else 
	        j=j/2;
	        count++;
	    }
	    cout<<count<<endl;
	}
	return 0;
}
