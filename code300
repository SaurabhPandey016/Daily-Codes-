import java.util.* ;

import java.io.*; 

public class Solution {

    public static void main(String[] args){

        Scanner sc=new Scanner(System.in);

        int n=sc.nextInt();

        long sum = evenSumTillN(n);

        System.out.println(sum);

    }

    public static long evenSumTillN(int n) {

        long sum = 0;

        for(int i=1;i<=n;i++) {

            if(i%2==0){

                sum=sum+i;

            }

        }

        return sum;

    }

}

